@page "/c"

<h1>Counter</h1>

<p>current count: @currentCount </p>

<button class="btn btn-primary" type="button" onclick="@IncrementCount()">Click me</button>


@functions {
    int currentCount = 0;
    int IncrementCount()
    {
        return currentCount++;
    }
}

<p>
    It's @DayName! Our customers include restaurants, hotels,
    and cruise lines.
</p>

@functions
{
    public string DayName { get; set; }
    public void OnGet()
    {
        Model.DayName = DateTime.Now.ToString("dddd");
    }
}