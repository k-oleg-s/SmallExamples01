@page "{id:int}"
@model Knowledge.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h1>Edit Customer - @Model.epage.Id</h1>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="epage.Id" type="hidden" />
    <div>
        <label asp-for="epage.text"></label>
        <div>
            <input asp-for="epage.text" />
            <span asp-validation-for="epage.text"></span>
        </div>
    </div>

    <div>
        <button type="submit">Save</button>
    </div>
</form>